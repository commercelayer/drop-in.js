{
  "root": true,
  "extends": [
    "@commercelayer/eslint-config-ts"
  ],
  "ignorePatterns": [
    "packages/drop-in/stencil.config.ts",
    "packages/drop-in/jest.setup.ts",
    "*.d.ts",
    "replace-jsdelivr.js"
  ],
  "rules": {
    "@typescript-eslint/consistent-indexed-object-style": [
      "error",
      "index-signature"
    ],
    "@typescript-eslint/consistent-type-definitions": [
      "error",
      "type"
    ]
  }
}
