{
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "pnpm -r build",
    "start:drop-in": "pnpm --filter drop-in start",
    "start:storybook": "concurrently -n drop-in,storybook -c 'bgBlue.bold,bgMagenta.bold' 'pnpm --filter drop-in build:watch' 'pnpm --filter storybook start'",
    "test": "pnpm --filter drop-in test",
    "test:watch": "pnpm --filter drop-in test:watch",
    "dep:upgrade:major": "pnpm -r exec npm-check-updates -u",
    "dep:upgrade:minor": "pnpm dep:upgrade:major -t minor",
    "dep:self-upgrade:major": "pnpm exec npm-check-updates -u",
    "dep:self-upgrade:minor": "pnpm dep:self-upgrade:major -t minor",
    "lint": "pnpm -r exec eslint ./ --ext ts,tsx",
    "lint:fix": "pnpm lint --fix"
  },
  "author": {
    "name": "Marco Montalbano",
    "email": "marco.montalbano@commercelayer.io"
  },
  "license": "MIT",
  "engines": {
    "node": ">=16",
    "pnpm": ">=7"
  },
  "devDependencies": {
    "@commercelayer/eslint-config-ts": "^0.1.3",
    "concurrently": "^7.4.0",
    "eslint": "^8.25.0",
    "lerna": "^5.6.2",
    "npm-check-updates": "^16.3.13",
    "typescript": "^4.8.4"
  }
}
