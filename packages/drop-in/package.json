{
  "name": "@commercelayer/drop-in.js",
  "version": "2.0.2",
  "description": "Transform any plain HTML page into an enterprise-grade static commerce website, with almost no coding required.",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/drop-in/drop-in.esm.js",
  "files": [
    "dist/"
  ],
  "homepage": "https://commercelayer.github.io/drop-in.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/commercelayer/drop-in.js.git"
  },
  "keywords": [
    "ecommerce",
    "custom-elements",
    "mfe",
    "micro-frontend",
    "composable-commerce",
    "drop-in"
  ],
  "scripts": {
    "postinstall": "pnpm build",
    "build": "stencil build --docs && pnpm build:sass",
    "build:sass": "sass --style compressed ./src/styles/:./dist/drop-in/",
    "build:watch": "stencil build --docs --watch",
    "start": "stencil build --dev --watch --serve",
    "test": "stencil test --spec --e2e --detectOpenHandles --passWithNoTests",
    "test:unit": "stencil test --spec --detectOpenHandles --passWithNoTests",
    "test:watch": "nodemon --watch src -e ts,tsx,js,jsx --exec 'stencil test --spec --e2e --detectOpenHandles'",
    "test:unit:watch": "nodemon --watch src -e ts,tsx,js,jsx --exec 'stencil test --spec --detectOpenHandles'",
    "test:e2e:watch": "nodemon --watch src -e ts,tsx,js,jsx --exec 'stencil test --e2e --detectOpenHandles'",
    "generate": "stencil generate",
    "ts:check": "tsc --noEmit"
  },
  "author": {
    "name": "Marco Montalbano",
    "email": "marco.montalbano@commercelayer.io"
  },
  "dependencies": {
    "@commercelayer/sdk": "^5.14.0",
    "@types/lodash": "^4.14.198",
    "iframe-resizer": "4.3.7",
    "js-cookie": "^3.0.5",
    "lodash": "^4.17.21",
    "type-fest": "^4.3.1"
  },
  "peerDependencies": {
    "@stencil/core": "^3.0.0"
  },
  "devDependencies": {
    "@stencil/core": "^4.3.0",
    "@stencil/sass": "^3.0.5",
    "@types/iframe-resizer": "^3.5.9",
    "@types/jest": "^27.5.2",
    "@types/js-cookie": "^3.0.4",
    "jest": "^27.5.1",
    "jest-cli": "^27.5.1",
    "nodemon": "^3.0.1",
    "puppeteer": "21.3.1",
    "sass": "^1.67.0",
    "ts-jest": "^27.1.5",
    "typescript": "^5.2.2"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.16.0"
  }
}
