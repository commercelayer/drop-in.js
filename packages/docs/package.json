{
  "name": "docs",
  "private": true,
  "version": "1.3.2",
  "scripts": {
    "start": "concurrently -n sass,app -c 'bgMagenta,bgMagenta' 'pnpm build:sass:watch' 'start-storybook -p 6006'",
    "build:copy": "cp -r ../drop-in/dist public/",
    "build:sass": "sass ./stories/assets/styles/:./public/",
    "build:sass:watch": "nodemon --watch ./node_modules/@commercelayer/drop-in.js -e scss --exec 'pnpm build:sass'",
    "build": "pnpm build:sass && pnpm build:copy && build-storybook --docs && pnpm replace:title",
    "replace:title": "sed -i -e 's/Webpack App/Commerce Layer drop-in library/g' ./storybook-static/index.html",
    "serve": "http-server storybook-static -o"
  },
  "author": {
    "name": "Marco Montalbano",
    "email": "marco.montalbano@commercelayer.io"
  },
  "devDependencies": {
    "@babel/core": "^7.21.8",
    "@storybook/addon-actions": "^6.5.16",
    "@storybook/addon-docs": "^6.5.16",
    "@storybook/addon-essentials": "^6.5.16",
    "@storybook/addon-interactions": "^6.5.16",
    "@storybook/addon-links": "^6.5.16",
    "@storybook/addons": "^6.5.16",
    "@storybook/builder-webpack4": "^6.5.16",
    "@storybook/core-common": "^6.5.16",
    "@storybook/html": "^6.5.16",
    "@storybook/manager-webpack4": "^6.5.16",
    "@storybook/testing-library": "^0.1.0",
    "@storybook/theming": "^6.5.16",
    "@types/react": "^18",
    "babel-loader": "^9.1.2",
    "http-server": "^14.1.1",
    "nodemon": "^2.0.22",
    "react": "^18",
    "react-dom": "^18",
    "sass": "^1.62.1",
    "typescript": "^5.0.4",
    "webpack": "^5.83.1"
  },
  "dependencies": {
    "@commercelayer/drop-in.js": "workspace:^1.3.2",
    "lit-html": "^2.7.4"
  }
}
